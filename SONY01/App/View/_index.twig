    <!-- loginBtn strat -->
    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-login">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="close" data-dismiss="modal" aria-hidden="true">&times;</div>
                        <h4 class="modal-title">登入</h4>
                    </div>
                    <div class="modal-body" id="login-table">
                        <div class="btn-facebook fb-login-btn">使用 Facebook 登入</div>
                        <div class="or">或使用 E-mail 登入</div>
                        <label for="account">
                            <!-- <span class="form-title">帳號</span> -->
                            <input class="form-input" type="text" name="account" id="account" placeholder="E-mail" />
                        </label>
                        <label for="password">
                            <!-- <span class="form-title">密碼</span> -->
                            <input class="form-input" type="password" name="password" id="password" placeholder="密碼" />
                        </label>
                        <div class="login-btn" id='login'>登入</div>
                        <div class="else">
                            <span class="forget forgetBtn">忘記密碼</span>
                            <span>/</span>
                            <span class="new-user newUserBtn">註冊新帳號</span>
                        </div>
                    </div>
<!--                     <div class="modal-footer">
                        <div class="cancel-btn" data-dismiss="modal">取消</div>
                    </div> -->
                </div>
            </div>
        </div>
    </div>
    <!-- loginBtn end -->

    <!-- forgetBtn strat -->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
        <div class="modal-dialog">
             <div class="modal-forget">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="close" data-dismiss="modal" aria-hidden="true">&times;</div>
                  <h4 class="modal-title">忘記密碼</h4>
                </div>
                <div class="modal-body" id="forgor-table">
                    <label for="account">
                        <input class="form-input" type="text" name="account" id="account" placeholder="E-mail" />
                    </label>
                    <label for="password">
                        <input class="form-input" type="password" name="password" id="password" placeholder="密碼" />
                    </label>
                    <label for="password">
                        <input class="form-input" type="password" name="password_confirm" id="password_confirm"  placeholder="確認新密碼" />
                    </label>
                    <div class="login-btn" id="forgot">寄送</div>
                    <div class="else">
                        <span class="have-account haveAccountBtn">已有帳號</span>
                        <span>/</span>
                        <span class="new-user newUserBtn">註冊新帳號</span>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    <!-- forgetBtn end -->

    <!-- newUserBtn strat -->
    <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-new">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="close" data-dismiss="modal" aria-hidden="true">&times;</div>
                  <h4 class="modal-title">註冊新帳號</h4>
                </div>
                <div class="modal-body" id="register-table">
                    <div class="btn-facebook fb-login-btn">使用 Facebook 註冊</div>
                     <div class="or">或使用 E-mail 登入</div>
                    <label for="account">
                        <input class="form-input" type="text" name="account" id="account" placeholder="E-mail" />
                    </label>
                    <label for="password">
                        <input class="form-input" type="password" name="password" id="password" placeholder="密碼" />
                    </label>
                    <label for="password">
                        <input class="form-input" type="password" name="password_confirm" id="password_confirm" placeholder="確認密碼" />
                    </label>
                    <div class="login-btn" id="register">註冊</div>
                    <div class="else">
                        <span class="forget forgetBtn">忘記密碼</span>
                        <span>/</span>
                        <span class="have-account haveAccountBtn">已有帳號</span>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    <!-- newUserBtn end -->

